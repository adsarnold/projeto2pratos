<!DOCTYPE html>
<html>
  <head>
    <title>Pedidos</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <%- include('../partials/header') %>

    <main class="container">
      <h1>Edição pedidos</h1>
      <hr />
      <section class="mt-3">
        <form action="/orders?_method=put" method="post">
          <div class="row">
            <div class="col-md-3">
              <div class="row">
                <div class="col-md-12">
                  <label for="name" class="form-label">Id</label>
                  <input
                    class="form-control"
                    type="text"
                    id="id"
                    name="id"
                    value="<%- orders.id %>"
                    readonly
                  />
                </div>
                <div class="col-md-12">
                  <label for="clients_id" class="form-label">Identificação de clientes</label>
                  <input
                    class="form-control"
                    type="text"
                    id="id"
                    name="id"
                    value="<%- orders.clients_id %>"
                    required
                  />
                </div>
                <div class="col-md-12">
                  <label for="document" class="form-label">Identificação de pratos</label>
                  <input
                    class="form-control"
                    type="text"
                    id="id"
                    name="id"
                    value="<%- orders.dishes_id %>"
                    required
                  />
                </div>
                
                <div class="mt-1 d-flex justify-content-end">
                  <a
                    role="button"
                    href="/dishes"
                    type="reset"
                    class="btn btn-default"
                    >Cancelar</a
                  >
                  <button type="submit" class="btn btn-primary">
                    Atualizar
                  </button>
                </div>
              </div>
            </div>
          </div>
        </form>
      </section>
    </main>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script
      src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
      integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
      crossorigin="anonymous"
    ></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
      crossorigin="anonymous"
    ></script>
  </body>
</html>