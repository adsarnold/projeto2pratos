<!DOCTYPE html>
<html>
  <head>
    <title>PRATOS</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    

    <main class="container">
      <h1>PRATOS</h1>
      <hr />
      <section class="mt-3">
        <h3>Pratos cadastrados</h3>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Nome</th>
              <th scope="col">Ingredientes</th>
              <th scope="col">Peso</th>
              <th scope="col">Preço</th>
            </tr>
          </thead>
          <tbody>
            <% dishes.forEach(function(dish) { %>
            <tr>
              <th scope="row"><%- dishes.id %></th>
              <td><%- dish.name %></td>
              <td><%- dish.ingredients %></td>
              <td><%- dish.weight %></td>
              <td><%- dish.price %></td>
              <td>
                <div class="row">
                  <div class="col-md-3">
                    <a
                      role="button"
                      href="/dishes/edit/<%-dishes.id%>"
                      class="btn btn-warning"
                    >
                      Editar
                    </a>
                  </div>
                  <div class="col-md-3">
                    <form method="POST" action="/dishes?_method=DELETE">
                      <input type="text" hidden name="id" value="<%-dishes.id%>" />
                      <button role="delete" data-dishes-id="<%-dishes.id%> type="submit" class="btn btn-danger">
                        Excluir
                      </button>
                    </form>
                  </div>
                </div>
              </td>
            </tr>
            <% });%>
          </tbody>
        </table>
      </section>
      <section class="mt-3">
        <h3>Cadastro novo prato</h3>
        <form action="" method="post">
          <div class="row">
            <div class="col-md-3">
              <div class="row">
                <div class="col-md-12">
                  <label for="name" class="form-label">Nome</label>
                  <input
                    class="form-control"
                    type="text"
                    id="name"
                    name="name"
                    required
                  />
                </div>
                <div class="col-md-12">
                  <label for="weight" class="form-label">Peso</label>
                  <input
                    class="form-control"
                    type="text"
                    id="weight"
                    name="weight"
                    required
                  />
                </div>
                <div class="col-md-12">
                  <label for="price" class="form-label">Preço</label>
                  <input
                    class="form-control"
                    type="text"
                    id="price"
                    name="price"
                    required
                  />
                </div>
                <div class="col-md-12">
                  <label for="ingredients" class="form-label">Ingredientes</label>
                  <input
                    class="form-control"
                    type="text"
                    id="ingredients"
                    name="ingredients"
                    required
                  />
                </div>
                <div class="mt-1 d-flex justify-content-end">
                  <button type="reset" class="btn btn-default">Cancelar</button>
                  <button type="submit" class="btn btn-primary">
                    Cadastrar
                  </button>
                </div>
              </div>
            </div>
          </div>
        </form>
      </section>
    </main>

