<!DOCTYPE html>
<html>
  <head>
    <title>PEDIDOS</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    

    <main class="container">
      <h1>PEDIDOS</h1>
      <hr />
      <section class="mt-3">
        <h3>Pedidos cadastrados</h3>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Clientes</th>
              <th scope="col">Pratos</th>
            
              
            </tr>
          </thead>
          <tbody>
            <% orders.forEach(function(order) { %>
            <tr>
              <th scope="row"><%- order.id %></th>
              <td><%- order.clients_name %></td>
              <td><%- order.dishes_name %></td>
              
              <td>
                <div class="row">
                  <div class="col-md-3">
                    <a
                      role="button"
                      href="/orders/edit/<%-orders.id%>"
                      class="btn btn-warning"
                    >
                      Editar
                    </a>
                  </div>
                  <div class="col-md-3">
                    <form method="POST" action="/orders?_method=DELETE">
                      <input type="text" hidden name="id" value="<%-orders.id%>" />
                      <button role="delete" data-dishes-id="<%-orders.id%> type="submit" class="btn btn-danger">
                        Excluir
                      </button>
                    </form>
                  </div>
                </div>
              </td>
            </tr>
            <% });%>
          </tbody>
        </table>
      </section>
      <section class="mt-3">
        <h3>Cadastro novo pedido</h3>
        <form action="" method="post">
          <div class="row">
            <div class="col-md-3">
              <div class="row">
                <div class="col-md-12">
                  <label for="clients_id" class="form-label">Cliente</label>
                  <select required name="clients_id" id="clients_id">
                    <% clients.forEach(function(client) { %>
                    <option value="<%= client.id %>"><%= client.name %></option>
                    <%})%>
                  </div> 
                  </select>
                 
                  

                   </div>
                <div class="col-md-12">
                  <label for="dishes_id" class="form-label">Prato</label>
                  <select required name="dishes_id" id="dishes_id">
                    <% dishes.forEach(function(dish) { %>
                    <option value="<%= dish.id %>"><%= dish.name %></option>
                    <%})%>
                    </div>
                  </select>
    
                
                
                
              
                <div class="mt-1 d-flex justify-content-end">
                  <button type="reset" class="btn btn-default">Cancelar</button>
                  <button type="submit" class="btn btn-primary">
                    Cadastrar
                  </button>
                </div>
              </div>
            </div>
          </div>
        </form>
      </section>
    </main>

    <!-- Bootstrap core JavaScript
    ================================================== -->
